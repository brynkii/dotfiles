#####################
# Application keybindings #
#####################

alt + f
    firefox-esr

alt + Return
	kitty

# rofi launchers
alt + space
   	rofi -modi drun -show drun -line padding 4 -hide-scrollbar -show-icons
   	
alt + shift + Return
	rofi -modi drun -show drun -line padding 4 -hide-scrollbar -show-icons
	
# rofi network manager	
alt + n
	bash ~/bin/rofi-network-manager

# logout, shutdown, reboot
alt + x
	~/bin/power
	
# help with shortcuts
alt + h
	~/bin/dwm-key
# make sxhkd reload its configuration files:
alt + Escape
	pkill -USR1 -x sxhkd; notify-send 'sxhkd' 'Reloaded config'
# application launchers

alt + l
	slock

alt + e
	geany

alt + g
	gimp
	
alt + b
	brave-browser

alt + c
	google-chrome
	
alt + d
	Discord

alt + o
	obs

alt + t
	thunar



#########
# Scrot #
#########
alt + shift + @s
	scrot -s -e 'mv $f ~/Pictures'; \
	notify-send 'Scrot' 'Selected image to ~/Pictures'

alt + s
	scrot -e 'mv $f ~/Pictures'; \
	notify-send 'Scrot' 'Image saved to ~/Pictures'
	
## redshift
alt + shift + r
	~/.local/bin/redshift-on
	
alt + shift + b
	~/.local/bin/redshift-off


## Show clipmenu
alt + v
    CM_LAUNCHER=rofi clipmenu 

## brightness 
XF86MonBrightness{Up,Down}
	brightnessctl s {+2%,2%-}

## Audio
XF86Audio{RaiseVolume,LowerVolume,Mute}
	pamixer -{i,d,t} 2; kill -34 $(cat ~/.cache/pidofbar)

 
