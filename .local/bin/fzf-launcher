#!/bin/bash

DIR1="/usr/bin"
DIR2="/bin"
DIR3="/usr/sbin"
DIR4="/usr/local/bin"

Menu="$(ls -a $DIR1 $DIR2 $DIR3 $DIR4 | uniq -u \
    | fzf --prompt="Which Program Would You Like To Run?: " \
    --border=rounded \
    --preview-window=wrap \
    --color='bg:#1d2021,fg:#ebdbb2,hl:#444444' \
    --margin=5% \
    --height 100% \
    --reverse \
    --multi --cycle --preview 'man {1}' \
    --header="          PROGRAMS " --info=default)"

exec $Menu

