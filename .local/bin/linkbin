#!/usr/bin/env bash

set -euo pipefail

# üé® Colors
RED=$'\033[1;31m'
GRN=$'\033[1;32m'
YEL=$'\033[1;33m'
BLU=$'\033[1;34m'
CYN=$'\033[1;36m'
NC=$'\033[0m'

LINK_DIR="$HOME/.local/bin"
mkdir -p "$LINK_DIR"

# Flags
unlink_mode=false
as_name=""
exec_only=true
rename_mode=false
rename_from=""
rename_to=""
files=()

# Parse args
while [[ $# -gt 0 ]]; do
  case "$1" in
    --as)
      shift
      as_name="$1"
      ;;
    --unlink)
      unlink_mode=true
      ;;
    --all)
      exec_only=false
      ;;
    --rename)
      rename_mode=true
      rename_from="$2"
      rename_to="$3"
      shift 2
      ;;
    --help)
      cat <<EOF
${CYN}Usage:${NC}
  ${GRN}linkbin${NC} <file1> [file2 ...]           ${YEL}# Link executable files to ~/.local/bin${NC}
  ${GRN}linkbin${NC} <file> --as newname           ${YEL}# Link with a custom name${NC}
  ${GRN}linkbin${NC} --unlink                      ${YEL}# Unlink via fzf${NC}
  ${GRN}linkbin${NC} --rename old new              ${YEL}# Rename a symlink${NC}

${CYN}Options:${NC}
  --all       Allow linking of non-executable files
  --help      Show this help
EOF
      exit 0
      ;;
    *)
      files+=("$1")
      ;;
  esac
  shift
done

# üõ†Ô∏è Rename mode
if $rename_mode; then
  src="$LINK_DIR/$rename_from"
  dst="$LINK_DIR/$rename_to"

  if [[ ! -L "$src" ]]; then
    echo "${RED}‚ùå No such symlink to rename: $src${NC}"
    exit 1
  fi

  if [[ -e "$dst" ]]; then
    echo "${YEL}‚ö†Ô∏è Target already exists: $dst${NC}"
    exit 1
  fi

  mv -v "$src" "$dst"
  echo "${BLU}üîÅ Renamed ${rename_from} ‚Üí ${rename_to}${NC}"
  exit 0
fi

# üßπ Unlink mode via fzf
if $unlink_mode; then
  if ! command -v fzf &>/dev/null; then
    echo "${RED}‚ùå fzf is required for unlink mode${NC}"
    exit 1
  fi

  mapfile -t to_remove < <(find "$LINK_DIR" -maxdepth 1 -type l | fzf -m --prompt="Unlink: " --height=20%)

  if [[ ${#to_remove[@]} -eq 0 ]]; then
    echo "${YEL}‚ö†Ô∏è No files selected.${NC}"
    exit 0
  fi

  for path in "${to_remove[@]}"; do
    echo "${RED}‚ùå Unlinking: $path${NC}"
    rm -v "$path"
  done
  exit 0
fi

# üß© Linking files
if [[ ${#files[@]} -eq 0 ]]; then
  echo "${YEL}‚ö†Ô∏è No files specified. Use --help for usage.${NC}"
  exit 1
fi

for f in "${files[@]}"; do
  if [[ ! -e "$f" ]]; then
    echo "${RED}‚ùå File not found: $f${NC}"
    continue
  fi

  if $exec_only; then
    if [[ ! -x "$f" && ! "$(head -n1 "$f")" =~ ^#! ]]; then
      echo "${YEL}‚è≠Ô∏è Skipping non-executable or non-shebang file: $f${NC}"
      continue
    fi
  fi

  name="${as_name:-$(basename "$f")}"
  target="$(realpath "$f")"
  link_path="$LINK_DIR/$name"

  echo "${CYN}üîó Linking: $target ‚Üí $link_path${NC}"
  ln -siv "$target" "$link_path"
done
