#!/bin/bash

export FZF_DEFAULT_OPTS="-e -i --info=hidden --cycle --layout=reverse --scroll-off=5 --preview-window=wrap --tiebreak=index --bind  'home:first,end:last,tab:down,shift-tab:up'"
man -k . | fzf -q "$1" --prompt='manpages: ' --preview-window down \
  --preview $'echo {} | tr -d \'()\' | awk \'{printf "%s ", $2} {print $1}\' | xargs -r man' \
  | tr -d '()' | awk '{printf "%s ", $2} {print $1}' | xargs -r man
